{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@shared/*": ["src/shared/*"],
      "@auth/*": ["src/features/auth/*"],
      "@auth": ["src/features/auth/index.ts"],
      "@user/*": ["src/features/user/*"],
      "@user": ["src/features/user/index.ts"],
      "@conversation/*": ["src/features/conversation/*"],
      "@conversation": ["src/features/conversation/index.tsx"],
      "@message/*": ["src/features/message/*"],
      "@message": ["src/features/message/index.ts"],
      "@profile/*": ["src/features/profile/*"],
      "@profile": ["src/features/profile/index.ts"],
      "@profile-sidebar/*": ["src/features/profile-sidebar/*"],
      "@profile-sidebar": ["src/features/profile-sidebar/index.ts"],
      "@conversation-sidebar/*": ["src/features/conversation-sidebar/*"],
      "@conversation-sidebar": ["src/features/conversation-sidebar/index.ts"],
      "@app-sidebar/*": ["src/features/app-sidebar/*"],
      "@app-sidebar": ["src/features/app-sidebar/index.ts"],
      "@nav-sidebar/*": ["src/features/navigation-sidebar/*"],
      "@nav-sidebar": ["src/features/navigation-sidebar/index.ts"],
      "@left-sidebar/*": ["src/features/left-sidebar/*"],
      "@left-sidebar": ["src/features/left-sidebar/index.tsx"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
